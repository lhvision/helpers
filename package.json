{
  "name": "@lhvision/helpers",
  "type": "module",
  "version": "1.0.1",
  "description": "一些简单实用的工具函数",
  "author": "lhvision",
  "license": "MIT",
  "homepage": "https://github.com/lhvision/helpers#readme",
  "bugs": {
    "url": "https://github.com/lhvision/helpers/issues"
  },
  "keywords": [
    "helpers"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "build": "vite build && tsc && rollup -c",
    "test": "vitest run",
    "oxlint": "npx oxlint@latest",
    "publish-with-otp": "zx scripts/npm-publish.js",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "re-changelog": "pnpm changelog -r 0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@types/node": "^20.16.11",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-format": "^0.1.2",
    "inquirer": "^9.3.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.2.10",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "simple-git-hooks": "^2.11.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vitest": "^1.6.0",
    "zx": "^8.1.9"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm test"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
