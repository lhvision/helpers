{
  "name": "@lhvision/helpers",
  "type": "module",
  "version": "1.0.3",
  "packageManager": "pnpm@9.9.0",
  "description": "一些简单实用的工具函数",
  "author": "lhvision",
  "license": "MIT",
  "homepage": "https://github.com/lhvision/helpers#readme",
  "bugs": {
    "url": "https://github.com/lhvision/helpers/issues"
  },
  "keywords": [
    "helpers"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    },
    "./shared": {
      "types": "./dist/shared.d.ts",
      "import": "./dist/shared.js",
      "require": "./dist/shared.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "build": "vite build && tsc && rollup -c",
    "build:debug": "cross-env __DEV__=true vite build",
    "test": "vitest run",
    "oxlint": "npx oxlint@latest",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "re-changelog": "pnpm changelog -r 0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "optionDependencies": {
    "hash-wasm": "^4.11.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@types/node": "^22.7.5",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-plugin-format": "^0.1.2",
    "hash-wasm": "^4.11.0",
    "inquirer": "^9.3.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "simple-git-hooks": "^2.11.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vitest": "^2.1.3",
    "zx": "^8.1.9"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "9"
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && git add . && pnpm test"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
